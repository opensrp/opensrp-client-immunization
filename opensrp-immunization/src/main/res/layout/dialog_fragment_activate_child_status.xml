<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <TextView
        android:id="@+id/tv_dialog_activate_child_title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Sample Title"
        android:textSize="30sp"
        android:textColor="@color/text_black"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:id="@+id/tv_dialog_activate_child_message"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/activate_child_status_dialog_message"
        android:textSize="22sp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/dialog_message_text_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end|bottom">

        <Button
            android:id="@android:id/button2"
            style="?attr/buttonBarNegativeButtonStyle"
            android:textSize="22sp"
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@android:id/button1"
            style="?attr/buttonBarPositiveButtonStyle"
            android:textSize="22sp"
            android:text="@string/make_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>