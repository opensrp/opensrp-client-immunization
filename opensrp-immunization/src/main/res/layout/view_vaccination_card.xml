<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@null"
    android:paddingStart="15dp">

    <ImageView
        android:id="@+id/status_iv"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="5dp"
        android:background="@null"
        android:src="@drawable/ic_action_check"
        android:visibility="invisible" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/name_tv"
        style="@style/CustomFontTextViewStyle.ClientList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_toEndOf="@id/status_iv"
        android:background="@null"
        android:gravity="center_vertical|start"
        android:singleLine="false"
        android:textColor="@color/client_list_grey"
        android:textSize="14sp" />

    <Button
        android:id="@+id/undo_b"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/invalid_b"
        android:layout_centerVertical="true"
        android:background="@drawable/undo_background"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/undo"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/invalid_b"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/invalid_vaccine_bg"
        android:focusable="false"
        android:padding="5dp"
        android:focusableInTouchMode="false"
        android:text="@string/invalid"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>